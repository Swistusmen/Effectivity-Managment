<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout      xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/mint">
    <TextView
        android:id="@+id/progressTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Progress"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:background="@color/teal_700"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/progressTitleBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutWrapper"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In progress"
        android:id="@+id/inProgress"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/layoutWrapper"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/inProgress"
        android:id="@+id/placeForGoals"
        android:orientation="vertical"
        android:background="@color/purple_200"
        android:layout_margin="10dp">
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finished"
        android:id="@+id/historical"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/placeForGoals"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/historical"
        android:id="@+id/finishedGoals"
        android:orientation="vertical"
        android:background="@color/purple_200"
        android:layout_margin="10dp">
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>